<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.addapp.matt.customapplication.MainActivity">
<!--如果不加android:inputType="numberDecimal" 或者输入的不是小数点格式 和默认EditText一样-->
    <com.addapp.matt.customapplication.view.DecimalPointEditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ccc"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:hint="请输入带小数点的数字"
        android:textSize="20sp"
        app:decimalPoint="2"
        android:text=""/>
</RelativeLayout>
